---
interface Props {
  src: string;
}
const { src } = Astro.props;
---

<div class="hero-image">
  <img width={1020} height={510} src={src} alt="" />
</div>

<style>
  .hero-image {
    width: 100%;
  }
  .hero-image img {
    display: block;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
  }
</style>
